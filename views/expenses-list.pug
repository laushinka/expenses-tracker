extends layout

block content
    h1 Hello!
    if expenses.length
        p Here are the expenses:
        table
            thead(class="table-header")
                td ID
                td Name
                td Cost
                td Category
            each item in expenses
                tr(class="table-row")
                    td(class="item-id") #{item.id}
                    td(class="item-name") #{item.name}
                    td(class="item-cost") #{item.cost}
                    td(class="item-category") #{item.category}

        pre= JSON.stringify(expenses, null, 2)
    else
        p No expenses yet!
    script.
        (!{JSON.stringify(expenses)})
